<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".introduction.IntroductionAlbumActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.appbar.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:theme="@style/AppTheme.AppBarOverlay">

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="?attr/colorPrimary"
                        app:popupTheme="@style/AppTheme.PopupOverlay" />
                </com.google.android.material.appbar.AppBarLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/picture1_edit_btn"
                        style="@style/Widget.AppCompat.Button.Small"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_margin="15dp"
                        android:background="@color/colorPrimary"
                        android:text="编辑"
                        android:textColor="#FFFFFF"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/picture1_close_btn"
                        style="@style/Widget.AppCompat.Button.Small"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:layout_margin="15dp"
                        android:background="@color/colorPrimary"
                        android:text="X"
                        android:textColor="#FFFFFF"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/picture1"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:scaleType="centerCrop"
                        android:visibility="visible"
                        tools:src="@drawable/plus" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/picture2_edit_btn"
                        style="@style/Widget.AppCompat.Button.Small"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_margin="15dp"
                        android:background="@color/colorPrimary"
                        android:text="编辑"
                        android:textColor="#FFFFFF"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/picture2_close_btn"
                        style="@style/Widget.AppCompat.Button.Small"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:layout_margin="15dp"
                        android:background="@color/colorPrimary"
                        android:text="X"
                        android:textColor="#FFFFFF"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/picture2"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:scaleType="centerCrop"
                        android:visibility="visible"
                        tools:src="@drawable/plus" />
                </FrameLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/picture3_edit_btn"
                        style="@style/Widget.AppCompat.Button.Small"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_margin="15dp"
                        android:background="@color/colorPrimary"
                        android:text="编辑"
                        android:textColor="#FFFFFF"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/picture3_close_btn"
