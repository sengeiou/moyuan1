                    <Button
                        android:id="@+id/picture4_edit_btn"
                        style="@style/Widget.AppCompat.Button.Small"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_margin="15dp"
                        android:background="@color/colorPrimary"
                        android:text="编辑"
